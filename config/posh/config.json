{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "kubectl",
          "style": "diamond",
          "powerline_symbol": "\ue0b0",
          "foreground": "#fff",
          "background": "#44475a",
          "trailing_diamond": "\ue0c6",
          "template": "{{if .Env.KUBECONFIG}}{{.Context}} :: {{if .Namespace}}{{.Namespace}}{{else}}default{{end}}{{end}}"
        },
        {
          "type": "path",
          "style": "diamond",
          "foreground": "#fff",
          "background": "#6272a4",
          "leading_diamond": "\ue0c7",
          "trailing_diamond": "\ue0c6",
          "template": " {{ .Path }} ",
          "properties": {
            "style": "folder"
          }
        },
        {
          "background": "#B7BDF8",
          "foreground": "#fff",
          "style": "diamond",
          "leading_diamond": "\ue0c7",
          "trailing_diamond": "\ue0c6",
          "properties": {
            "branch_icon": "\ue725 ",
            "cherry_pick_icon": "\ue29b ",
            "commit_icon": "\uf417 ",
            "fetch_status": false,
            "fetch_upstream_icon": false,
            "merge_icon": "\ue727 ",
            "no_commits_icon": "\uf594 ",
            "rebase_icon": "\ue728 ",
            "revert_icon": "\uf0e2 ",
            "tag_icon": "\uf412 "
          },
          "powerline_symbol": "\ue0b4",
          "template": " {{ .HEAD }} ",
          "type": "git"
        },
        {
          "type": "python",
          "style": "diamond",
          "foreground": "#fff",
          "background": "#ffb86c",
          "leading_diamond": "\ue0c7",
          "trailing_diamond": "\ue0c6",
          "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }} "
        },
        {
          "type": "rust",
          "style": "diamond",
          "foreground": "#fff",
          "background": "#ffb86c",
          "leading_diamond": "\ue0c7",
          "trailing_diamond": "\ue0c6",
          "template": " {{ if .Error }}{{ .Error }}{{ else }}{{ .Full }}{{ end }} "
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "#fff",
          "background": "#ff79c6",
          "leading_diamond": "\ue0c7",
          "trailing_diamond": "\ue0c6",
          "template": " <#fefefe>\ufbab</> {{ .FormattedMs }} ",
          "properties": {
            "threshold": 10,
            "style": "austin"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#21c7c7",
          "template": "\u2570\u2500"
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#e0f8ff",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#ef5350{{ end }}"
          ],
          "template": "\ue285\ufb00 ",
          "properties": {
            "always_enabled": true
          }
        }
      ],
      "newline": true,
      "final_space": true
    }
  ]
}
