{
  "assistant": {
    "default_model": {
      "model": "claude-3-5-sonnet",
      "provider": "copilot_chat"
    },
    "button": false,
    "version": "2"
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false,
      "delay_ms": 1000
    },
    "git_gutter": "tracked_files"
  },
  "base_keymap": "JetBrains",
  "buffer_font_family": "Fira Code",
  "buffer_font_size": 15,
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },
  "enable_language_server": true,
  "file_scan_exclusions": [
    "**/node_modules",
    "**/vendor",
    "**/dist",
    "**/build",
    "**/target",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.bzr",
    "**/.DS_Store",
    "**/.vscode",
    "**/.idea",
    "**/.stack-work",
    "**/.cabal-sandbox",
    "**/.ccls-cache",
    "**/.clangd",
    "**/.cquery",
    "**/.eunit",
    "**/.gitlab",
    "**/.hg",
    "**/.idea",
    "**/.lib",
    "**/.mypy_cache",
    "**/.pytest_cache",
    "**/.stack-work",
    "**/.svn",
    "**/.tox",
    "**/.vscode",
    "**/__pycache__",
    "**/build",
    "**/dist",
    "**/node_modules",
    "**/target",
    "**/vendor"
  ],
  "file_types": {
    "Dockerfile": [
      "Dockerfile",
      "Dockerfile.*"
    ],
    "JSON": [
      "json",
      "jsonc"
    ]
  },
  "formatter": "language_server",
  "gutter": {
    "code_actions": true,
    "line_numbers": true
  },
  "indent_guides": {
    "coloring": "indent_aware",
    "enabled": true,
    "background_coloring": "disabled"
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "languages": {
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": [
        //"!pyright"
        "basedpyright",
        "ruff",
        "python-refactoring"
      ]
    },
    "Rust": {
      "show_inline_completions": false
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "openFilesOnly",
          "typeCheckingMode": "basic"
        },
        "disableOrganizeImports": true
      }
    },
    "basedpyright": {
      "settings": {
        "python": {
          "reportMissingTypeStubs": false
        },
        "basedpyright.analysis": {
          "diagnosticMode": "openFilesOnly",
          "typeCheckingMode": "basic",
          "reportMissingTypeStubs": false
        },
        "disableOrganizeImports": true
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 88,
          "showSyntaxErrors": true,
          "lint": {
            "select": [
              "ALL"
            ],
            "ignore": [
              "D",
              "S101",
              "ANN201"
            ]
          }
        }
      }
    },
    "rust-analyzer": {
      "binary": {
        "args": [],
        "path": "/Users/andresortiz/.cargo/bin/rust-analyzer"
      },
      "initialization_options": {
        "inlayHints": {
          "closureReturnTypeHints": {
            "enable": "always"
          },
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "maxLength": null
        }
      }
    }
  },
  "outline_panel": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  "tab_bar": {
    "show": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_features": {
    "calt": true
  },
  "buffer_font_features": {
    "calt": true,
    "dlig": true
  },
  "terminal": {
    "detect_venv": "off",
    "dock": "bottom",
    "blinking": "terminal_controlled",
    "buffer_font_fallbacks": [
      "Nerd Font"
    ],
    "button": false,
    "font_family": "CaskaydiaCove Nerd Font",
    "font_size": 15,
    "font_features": {
      "calt": true,
      "cv01": 7
    },
    "line_height": "comfortable",
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "theme": "Catppuccin Mocha - No Italics",
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "ui_font_fallbacks": [
    "Hack Nerd Font Mono"
  ],
  "ui_font_family": "FiraCode Nerd Font Mono",
  //"show_call_status_icon": false,
  "ui_font_size": 15,
  "experimental.theme_overrides": {
    "pane_group.border": "#464b5700",
    "background.appearance": "opaque",
    "background": "#09090bBB",
    "panel.background": "#00000000",
    "background.image_file": "/Users/andresortiz/downloads/background.jpg",
    "editor.background": "#00000000",
    //"editor.background": "#282a36",
    "tab_bar.background": "#00000000",
    "terminal.background": "#00000000",
    "toolbar.background": "#00000000",
    "tab.inactive_background": "#00000000",
    "tab.active_background": "#3f3f4650",
    "border": "#00000000",
    //"status_bar.background": "#00000000",
    //  "title_bar.background": "#00000000",
    "border.variant": "#00000000",
    "scrollbar.track.background": "#52525b20",
    "scrollbar.track.border": "#00000000",
    "scrollbar.thumb.background": "#52525b30",
    "scrollbar.thumb.border": "#00000000",
    // "elevated_surface.background": "#00000090",
    "elevated_surface.background": "#5A4A8A",
    "warning.background": "#5A4A8A",
    "warning.border": "#FFB84D",
    "error.background": "#5A4A8A",
    "error.border": "#d072771a",
    "surface.background": "#00000090",
    "editor.active_line_number": "#ffffffcc",
    "editor.gutter.background": "#00000000",
    "editor.indent_guide": "#ffffff30",
    "editor.indent_guide_active": "#ffffff80",
    "editor.line_number": "#ffffff80",
    "editor.active_line.background": "#3f3f4640"
  }
}
