# Environment Variables Template
# Copy this file to .env and fill in your values
# .env is git-ignored and will be loaded on-demand by functions

# AI Configuration (for shit command)
OPENAI_API_KEY="sk-..."

# MCP Server Configuration
# Sentry (https://sentry.io/settings/account/api/auth-tokens/)
SENTRY_AUTH_TOKEN=

# Slack Bot Token (https://api.slack.com/apps)
SLACK_BOT_TOKEN=xoxb-...
SLACK_USER_TOKEN=xoxp-...

# Memos (your self-hosted instance)
MEMOS_URL=https://memos.yourdomain.com
MEMOS_ACCESS_TOKEN=

# Linear uses OAuth via browser, no token needed here

# Context7 (optional - works without key, get one at context7.com/dashboard for higher limits)
CONTEXT7_API_KEY=bla
